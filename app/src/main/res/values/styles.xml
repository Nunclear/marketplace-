<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Enhanced shape and typography styles -->

    <!-- Image Styles -->
    <style name="ImageStyle_Circle">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ImageStyle_Corners_Reounded">
        <item name="cornerSize">10dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Added new style for modern rounded corners -->
    <style name="ImageStyle_Corners_Large">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextStyle.Heading1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextStyle.Heading2">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Heading3">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextStyle.Body_Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextStyle.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <style name="TextStyle.Label">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Base style alias for backwards compatibility -->
    <style name="TextStyle" parent="TextStyle.Body" />

    <!-- Card and Shape styles -->
    <style name="CardStyle.Default">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardStyle.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Base style alias for backwards compatibility -->
    <style name="CardStyle" parent="CardStyle.Default" />
</resources>
