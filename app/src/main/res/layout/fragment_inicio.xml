<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".Fragmentos.FragmentInicio">

    <!-- Added scroll wrapper for responsive behavior -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <!-- Location Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:contentPadding="@dimen/card_padding"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:background="@color/surface">

                <TextView
                    android:id="@+id/Tv_locacion"
                    android:text="@string/Tv_locacion"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_body"
                    android:textColor="@color/text_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_locacion"
                    android:drawablePadding="@dimen/spacing_md"
                    app:drawableEndCompat="@drawable/ic_siguiente"
                    android:drawableTint="@color/primary_500"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Search Bar & Filter -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_lg">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    app:contentPadding="@dimen/spacing_md"
                    android:background="@color/surface">

                    <EditText
                        android:id="@+id/Et_buscar"
                        android:hint="@string/Et_buscar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/text_tertiary"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_body_small"
                        android:background="@android:color/transparent"
                        app:drawableStartCompat="@drawable/ic_buscar"
                        android:drawablePadding="@dimen/spacing_md"
                        app:drawableTint="@color/primary_500"
                        android:importantForAutofill="no"/>

                </com.google.android.material.card.MaterialCardView>

                <ImageButton
                    android:id="@+id/Ib_limpiar"
                    android:src="@drawable/ic_limpiar_busqueda"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/spacing_md"
                    android:layout_width="@dimen/m_button_height"
                    android:layout_height="@dimen/m_button_height"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:tint="@color/primary_500"
                    android:contentDescription="@string/Et_buscar"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Categories Section -->
            <TextView
                android:text="@string/Txt_categoria"
                style="@style/TextStyle.Body_Small"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/spacing_md"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Categories RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoriaRv"
                tools:listitem="@layout/item_categoria_inicio"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"/>

            <!-- Listings RecyclerView with responsive grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/anunciosRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_anuncio_nueva_version"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>
